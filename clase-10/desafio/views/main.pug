html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        title="Lista de productos"
    body(class="container-fluid d-flex flex-column" style="background-color: antiquewhite")
        div(class="container-fluid justify-content-evenly p-3 m-1")
         h1(class="text-decoration-underline")="Productos"
           if ifExists
             table(class="table table-sm table-striped table-bordered table-dark")
               thead
                 tr
                   th(scope="col")="Nombre"
                   th(scope="col")="Precio"
                   th(scope="col")="Foto"
               tbody
                 each products in listProducts
                   tr
                    td=products.title
                    td=products.price
                    td
                      img(src=products.thumbnail alt="" border=3 height=50 width=50)
           else
               div(class="alert alert-danger p-0 m-0" role="alert")
                 h3(class="alert-heading d-flex justify-content-evenly p-3 m-1")="Lo sentimos!"
                 h4(class="d-flex justify-content-evenly p-3 m-1")="No se encontraron productos!"
div(class="d-flex justify-content-evenly p-3 m-1")
   a(class="btn btn-secondary" href="http://localhost:8080/" role="button")="Cargar Productos"

