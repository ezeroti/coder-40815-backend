<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/main.js"></script>
        <title>Ingreso de Productos</title>
    </head>
    <body class="container-fluid d-flex flex-column" style="background-color: antiquewhite">
        <div class="d-flex justify-content-evenly p-3 m-1">
            <h1 class="text-decoration-underline">Nuevo Producto</h1>
        </div>
        <div class="d-flex justify-content-evenly p-3 m-1">
            <form method="post" onsubmit="return addProduct(this)">
              <div class="form-group">
                <label for="title">Nombre</label>
                <input type="text" name="title" id="title" class="form-control" aria-describedby="Nombre" placeholder="Ingrese Nombre">
              </div><br>
              <div class="form-group">
                <label for="price">Precio</label>
                <input type="text" name="price" id="price" class="form-control" aria-describedby="Precio" placeholder="Ingrese Precio">
              </div><br>
              <div class="form-group">
                <label for="thumbnail">Foto URL</label>
                <input type="text" name="thumbnail" id="thumbnail" class="form-control" aria-describedby="Foto URL" placeholder="Ingrese Foto URL">
              </div><br>
              <div class="d-flex container-fluid justify-content-around">
                <button type="submit" class="btn btn-primary">Enviar</button>
              </div>
            </form>
        </div>
      <hr>
      <%- include('partials/listProd.ejs'); %>
      <div>
        <hr>
        <div class="d-flex justify-content-evenly p-3 m-1">
          <h1 class="text-decoration-underline">Centros de mensajes</h1>
      </div>
        <div>
          <div class="d-flex justify-content-evenly p-3 m-1">
            <form method="post" onsubmit="return addMsgChat(this)">
              <div class="form-group">
                <input type="text" name="user" id="user" class="form-control" aria-describedby="Username" placeholder="Ingrese correo electronico:">
              </div><br>
              <hr>
              <div id="messages" class="col-xs-6"></div><br>
              <hr><br>
              <div class="d-flex container-fluid justify-content-around flex-column">
                <input type="text" name="msg" id="msg" class="form-control" aria-describedby="Escriba su mensaje:" placeholder="Escriba su mensaje:"><br>
                <button type="submit" class="btn btn-primary">Enviar</button>
              </div>
            </form>
        </div>
        </div>
        <hr>
      </div>
    </body>
</html>
